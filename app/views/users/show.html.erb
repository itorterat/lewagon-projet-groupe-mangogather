<div class="container my-3">
  <%= link_to "Retour Ã  la liste des utilisateurs", request.referrer || users_path, class: "btn btn-outline-primary mt-5" %>
  <div class="d-flex my-3">
    <div class="align-items-center card col-4 d-flex flex-column my-3 shadow">
      <h2 class="my-3"><%= @user.first_name.capitalize %> <%= @user.last_name.upcase %></h2>
      <% avatar = (@user.photo.attached? ? @user.photo : "category_placeholder.png") %>
      <%= image_tag avatar, class: "border border-2 border-primary rounded-circle w-50" %>

      <div class="align-items-center card-body d-flex flex-column text-center">
          <p><i class="fa-solid fa-quote-left"></i> <%= @user.description %> <i class="fa-solid fa-quote-right"></i></p>
          <p><i class="fa-solid fa-location-dot"></i> <%= @user.city %></p>
          <p><%= @user.categories.pluck(:name).sort.join(', ') %></p>
          <%= link_to "RÃ©server un service", new_user_booking_path(@user), class: 'btn btn-primary' %>
      </div>
    </div>

    <div class="card col m-3 shadow">
      <div class="card-body text-center">
        <h2>Avis sur l'utilisateur</h2>
        <% if Booking.joins(:service).where(services: { user: @user }).joins(:reviews).empty? %>
          <p class="mt-5">Pas d'avis sur <strong><%= @user.first_name %></strong> pour le moment !</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

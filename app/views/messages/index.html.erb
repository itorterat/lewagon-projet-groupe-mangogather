<% @messages.each do |message| %>
  <% if message.content %>
    <% user = User.find(message.author_id) %>
    <%= user.email %><%= message.created_at.strftime("%d/%m/%Y Ã  %H:%M") %>
    <%= message.content %>
  <% end %>
<% end %>
<%= form_for [@conversation, @message] do |f| %>
  <%= f.text_area :content %>
  <%= f.text_field :author_id, value: current_user.id, type: "hidden" %>
  <%= f.submit "Send Reply" %>
<% end %>
